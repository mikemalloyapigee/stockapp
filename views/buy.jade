extends layout

block content
  div.container
    h1 Buy Stock
    form(method="post", id="buyForm")
      input.input-small(id="ticker", type="text", name="ticker", placeholder="Ticker Symbol")
      input.input-small(id="shares", type="number", name="shares", placeholder="Number of Shares")
      input.btn.primary(type="submit", value="Buy Shares")
       